<grammar mode="voice" xml:lang="de-DE" version="1.0" root="greeting">
  <rule id="greeting" scope="public">
    <item repeat="0-5">
      <one-of>
        <item> Guten Morgen </item>
        <item> Hallo </item>
      </one-of>
    </item>
    <one-of>
      <item repeat="0-5"> Dirk </item>
      <item> David </item>
      <item> Renato </item>
    </one-of>
  </rule>
</grammar> 
