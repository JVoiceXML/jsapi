<grammar mode="voice" xml:lang="de-DE" version="1.0" root="greeting">
  <rule id="greeting" scope="public">
    <item repeat="1-5">
      <one-of>
        <item> Guten Morgen </item>
        <item> Hallo </item>
      </one-of>
    </item>
    <item repeat="1-1">
      <one-of>
        <item> Dirk </item>
        <item> David </item>
        <item> Renato </item>
        <item> Josua </item>
      </one-of>
    </item>
  </rule>
</grammar> 
