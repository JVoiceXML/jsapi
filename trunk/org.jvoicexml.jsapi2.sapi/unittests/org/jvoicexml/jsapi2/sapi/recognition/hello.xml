<grammar mode="voice" xml:lang="de-DE" version="1.0" root="greeting" 
xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics-ms/1.0">

	<rule id="greeting" scope="public">
		<item repeat="0-5">
			<one-of>
				<item> Guten Morgen </item>
				<item> Hallo </item>
			</one-of>
		</item>
		<item repeat="0-1">
			<one-of>
				<item> Dirk 	</item>
				<item> David 	</item>
				<item> Renato 	</item>
				<item> Josua 	</item>
			</one-of>
		</item>
	</rule>
</grammar>